FROM centos:centos7

MAINTAINER mike.vartanian@nih.gov

ENV PERLLIB="."

RUN yum -y --exclude=kernel.* update \
        && \
    yum -y install bison \
    flex \
    gcc-c++ \
    git \
    libcurl-devel \
    make \
    rpmlint \
    rpm-build \
    zlib-devel \
        && \
    rm -rf /var/cache/yum

