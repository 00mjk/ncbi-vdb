FROM debian:9

MAINTAINER mike.vartanian@nih.gov

ENV PERLLIB="."

RUN apt-get update \
        && \
    apt-get -y install \
    bison \
    clang \
    cppcheck \
    flex \
    g++ \
    gcc \
    git \
    libcurl4-openssl-dev \
    libxml2-dev \
    lsb-release \
    make \
    zlib1g-dev \
        && \
    rm -rf /var/lib/apt/lists/*

